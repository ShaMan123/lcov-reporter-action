{
	"name": "lcov-reporter-action",
	"version": "0.2.19",
	"description": "Comments a pull request with the lcov code coverage",
	"license": "MIT",
	"author": "Romeo Van Snick",
	"contributors": [
		{
			"name": "Shachar Nencel",
			"email": "shacharnen@gmail.com",
			"url": "https://github.com/ShaMan123"
		}
	],
	"repository": "https://github.com/ShaMan123/lcov-reporter-action",
	"keywords": [
		"actions",
		"pull-request",
		"comment",
		"message"
	],
	"main": "index.js",
	"scripts": {
		"build": "rollup -c",
		"test": "jest --passWithNoTests --coverage",
		"local": "babel-node src/cli",
		"format": "prettier --write src/*.js src/**/*.js"
	},
	"dependencies": {
		"@actions/core": "^1.10.1",
		"@actions/github": "^5.1.1",
		"encoding": "^0.1.13",
		"lcov-parse": "^1.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.23.0",
		"@babel/node": "^7.22.19",
		"@babel/preset-env": "^7.22.20",
		"@rollup/plugin-commonjs": "^22.0.2",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"babel-jest": "^29.7.0",
		"core-js": "^3.33.0",
		"jest": "^29.7.0",
		"prettier": "^2.8.8",
		"regenerator-runtime": "^0.13.11",
		"rollup": "^2.79.1",
		"rollup-plugin-node-externals": "^4.1.1"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"useBuiltIns": "usage",
					"corejs": 3
				}
			]
		]
	},
	"jest": {
		"testMatch": [
			"<rootDir>/src/*_test.js",
			"<rootDir>/src/**/*_test.js"
		]
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"trailingComma": "all"
	}
}
